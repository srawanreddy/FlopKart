<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_gradient"
    tools:context="com.example.sravanreddy.flopkart.SplashScreen">



        <ImageView
        android:id="@+id/circular_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
        android:src="@drawable/circular_bag"/>
        <ImageView
            android:id="@+id/circular_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/circular_glasses"/>
        <ImageView
            android:id="@+id/circular_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/circular_shoes"/>
</LinearLayout>
