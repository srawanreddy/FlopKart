<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/wishList_recylerview"
        android:layout_width="match_parent"
        android:layout_height="480dp"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/wishlist_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/signUp_editText_bottomMargin"
        android:layout_marginLeft="@dimen/edittext_sidesMargin"
        android:layout_marginRight="@dimen/edittext_sidesMargin"
        android:background="@drawable/button_bg_gradient"
        android:textColor="@color/icons"
        android:layout_gravity="bottom"
        android:text=" Close " />
</LinearLayout>