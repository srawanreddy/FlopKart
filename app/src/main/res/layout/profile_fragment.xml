<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/edittext_sidesMargin"
        android:layout_marginRight="@dimen/edittext_sidesMargin"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:padding="@dimen/editTextPadding"
        app:srcCompat="@drawable/ic_person_outline_black_24dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_name"
        android:layout_marginLeft="10dp"
        android:padding="@dimen/editTextPadding"
        />
    <TextView
        android:id="@+id/profile_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/primaryText"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:padding="@dimen/editTextPadding"
        android:text="TextView" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/editTextPadding"
            />
    <TextView
        android:id="@+id/profile_address"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/primaryText"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:padding="@dimen/editTextPadding"
        android:text="TextView" />
    </LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_email"
    android:layout_marginLeft="10dp"
    android:padding="@dimen/editTextPadding"
    />
    <TextView
        android:id="@+id/profile_emailId"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/primaryText"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:padding="@dimen/editTextPadding"
        android:text="TextView" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_phone_black_24dp"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/editTextPadding"
            />

    <TextView
        android:id="@+id/profile_mobile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/primaryText"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:padding="@dimen/editTextPadding"
        android:text="TextView" />
    </LinearLayout>
    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edittext_sidesMargin"
        android:background="@drawable/button_bg_gradient"
        android:padding="@dimen/editTextPadding"
        android:textColor="@color/icons"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="@dimen/edittext_sidesMargin"
        android:layout_marginBottom="@dimen/edittext_sidesMargin"
        android:text="Update Profile" />
    <TextView
        android:id="@+id/resetPassword"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ea5959"
        android:gravity="center"
        android:text="Reset Password" />
</LinearLayout>
</ScrollView>